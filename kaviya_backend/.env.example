# Application
PORT=3001
# Comma-separated list of allowed origins for CORS (use * to allow all; note credentials will be disabled when using *)
ALLOWED_ORIGINS=http://localhost:3000

# Security
# REQUIRED: Secret used to sign JWT tokens (set this in your real .env, not committed)
JWT_SECRET=change_this_in_real_env

# Database
# Use the requested local MongoDB URI for development
# If you already run Mongo with auth and different host/port, override accordingly.
MONGODB_URI=mongodb://localhost:27017/kaviyaLMS
# Optional hint to prefer localhost when auto-deriving URIs in config/db.js
KAVIYA_DB_HOST=localhost
