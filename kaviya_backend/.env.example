# Backend environment configuration
# Copy this file to `.env` and adjust values as needed.

# The port the Express server listens on
PORT=3000

# JWT secret used for signing tokens (REQUIRED)
JWT_SECRET=change-me-please

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000

# MongoDB connection string
# For docker-compose/k8s service name:
# MONGODB_URI=mongodb://appuser:dbuser123@kaviya_database:5000/myapp?authSource=admin
# For local development with local Mongo:
# MONGODB_URI=mongodb://appuser:dbuser123@localhost:5000/myapp?authSource=admin
MONGODB_URI=

# Optional: Used by getMongoUri() helper to prefer localhost URI
# KAVIYA_DB_HOST=localhost
